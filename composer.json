{
    "name": "greenworld-energies/slim-skeleton",
    "description": "Dependencies needed for a fictive energy supplier based on the slim-skeleton.",
    "keywords": ["microframework", "rest"],
    "homepage": "https://github.com/JonesPButter/greenworld-energies",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Johannsen",
            "email": "jonas.johannsen@haw-mailer.de"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.1.1",
        "slim/flash": "0.2.0",
        "phpmailer/phpmailer": "~5.2",
        "fpdo/fluentpdo": "1.1.*",
        "monolog/monolog": "^1.17",
        "symfony/serializer": "^3.0",
        "respect/validation": "1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload":{
        "psr-4  ": {
            "Broforce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Source\\": "src/",
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
