{% extends '@views/app.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default border-color">
                <div class="panel-heading">Registrieren</div>
                <div class="panel-body">
                    {# will be posted using javascript, see signUp.js#}
                    <form id="signUpForm" name="signUpForm" action="{{ path_for('/userservice/signUp.post') }}" method="POST">
                    {#<form id="signUpForm" name="signUpForm" action="{{ path_for('/userservice/signUp.post') }}" method="POST" onsubmit="event.preventDefault(); submitSignUpForm();">#}
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email:</label>
                            <input type="text" name="email" id="email" class="form-control" value="{{ old.email }}">
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">Passwort:</label>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group {{ errors.passwordRetyped ? 'has-error' : '' }}">
                            <label for="passwordRetyped">Passwort wiederholen:</label>
                            <input type="password" name="passwordRetyped" id="passwordRetyped" class="form-control">
                        </div>
                        <button class="btn btn-lg btn-success btn-block " name="submit" type="submit">Registrieren</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
