<div class="col-sm-4">
    <div class="well well-sm priceCalculator">
        <form name="priceCalculator" action="{{ path_for('calculator.post') }}" method="post">
            <div class="form-group ">
                <label for="postalcode">Postleitzahl:</label>
                <input id="postalcode" type="text" class="form-control" name="postalcode"
                       placeholder="Postleitzahl">
            </div>
            <div class="form-group ">
                <label for="kwh">Ihr Verbrauch in KWh:</label>
                <input id="kwh" type="text" class="form-control" name="kwh" placeholder="3500">
            </div>
            <div class="form-group ">
                <label for="radio-line">Anzahl Personen:</label>
                <div id="radio-line">
                    <label class="radio-inline">
                        <input type="radio" id="radio1" name="optradio" onclick="checkRadioButtons()" value="1500">1
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio2" name="optradio" onclick="checkRadioButtons()" value="2500">2
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio3" name="optradio" onclick="checkRadioButtons()" value="3500">3
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio4" name="optradio" onclick="checkRadioButtons()" value="4500">4+
                    </label>
                </div>
            </div>
            <div class="form-group ">
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                    Preis berechnen
                </button>
            </div>
        </form>
    </div>
</div>
<script>

    function checkRadioButtons(){
        var length = document.priceCalculator.optradio.length;
        var value = "";
        for (i = 0; i < length; i++) {

            if ( document.priceCalculator.optradio[i].checked ) {

                value = document.priceCalculator.optradio[i].value;
                document.priceCalculator.kwh.value=value;
                break;
            }
        }
    }

</script>

