{% extends '@views/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <form action="{{ path_for('signIn.post') }}" method="post">
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button class="btn btn-lg btn-success btn-block " type="submit">Login</button>
                        {#<td><a href="{{ path_for('passwordRequest') }}" class="btn btn-info">Forgot Password</a></td>#}
                    </form>
                </div>
                {% if flash.getMessage('error-login') %}
                    <div class="alert alert-danger" role="alert">
                        {{ flash.getMessage('error-login') | first }}
                        <p>Your input is correct? Maybe you just forgot to validate your email.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}