<div class="col-sm-4">
    <div class="well well-sm priceCalculator">
        <form name="priceCalculatorForm" action="{{ path_for('calculator.post') }}" method="post">
            <div class="form-group ">
                <label for="postalcode">Postleitzahl:</label>
                <input id="postalcode" type="text" class="form-control" name="postalcode"
                       placeholder="Postleitzahl">
            </div>
            <div class="form-group ">
                <label for="kwh">Ihr Verbrauch in KWh:</label>
                <input id="kwh" type="text" class="form-control" name="kwh" placeholder="3500">
            </div>
            <div class="form-group ">
                <label for="radio-line">Anzahl Personen:</label>
                <div id="radio-line">
                    <label class="radio-inline">
                        <input type="radio" id="radio1" name="optradio" onclick="checkRadioButtons()" value="1500">
                        <i class="fa fa-user-times" aria-hidden="true"></i> 1
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio2" name="optradio" onclick="checkRadioButtons()" value="2500">
                        <i class="fa fa-user-times" aria-hidden="true"></i> 2
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio3" name="optradio" onclick="checkRadioButtons()" value="3500">
                        <i class="fa fa-user-times" aria-hidden="true"></i> 3
                    </label>
                    <label class="radio-inline">
                        <input type="radio" id="radio4" name="optradio" onclick="checkRadioButtons()" value="4500">
                        <i class="fa fa-user-times" aria-hidden="true"></i> 4+
                    </label>
                </div>
            </div>
            <div class="form-group ">
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                    Preis berechnen
                </button>
            </div>
        </form>
    </div>
</div>


